{
  "compilerOptions": {
    "target": "ES6", // Specify ECMAScript target version
    "module": "commonjs", // Specify module code generation
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased imports
    "skipLibCheck": true, // Skip type checking of all declaration files
    "outDir": "./dist", // Redirect output structure to the 'dist' directory
    "rootDir": "./src" // Specify the root directory of input files
  },
  "include": [
    "src/**/*"
  ], // Include all TypeScript files in 'src'
  "exclude": [
    "node_modules"
  ] // Exclude 'node_modules' from compilation
}